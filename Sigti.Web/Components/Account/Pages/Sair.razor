@page "/Account/Sair"
@layout AccountLayout
@using Sigti.Application
@using Sigti.Application.Interfaces

<div class="row vh-100  justify-content-center align-items-center container-fluid m-0">

    <div class="col-md-4">
        <MudCard Class="pa-8 ma-1" Elevation="3">
            <MudText Typo="Typo.h6">

                Logout
            </MudText>

            <MudText>Confirma saída do sistema?</MudText>


            <form action="Account/Logout" method="post">

                <input type="hidden" name="ReturnUrl" value="" />
                <MudButton Target="_parent" Href="/">Retornar</MudButton>
                <MudButton Color="Color.Tertiary" ButtonType="ButtonType.Submit">Sair</MudButton>
                <AntiforgeryToken />
            </form>
        </MudCard>
       
    </div>

</div>


       
   
